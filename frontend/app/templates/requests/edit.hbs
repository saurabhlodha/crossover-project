Edit Trip

<form>
  <div class="form-group">
    <label>Description</label>
    {{input type="text" name="description" class="form-control" value=model.destination placeholder="Enter your query" }}
  </div>
  <div class="form-group">
    <label>Ticket status</label>
    {{#x-select value=model.status class="form-control" }}
      {{#x-option value="open"}}Ticket is open{{/x-option}}
      {{#x-option value="processing"}}In progress{{/x-option}}
      {{#x-option value="closed"}}The ticket is closed{{/x-option}}
    {{/x-select}}
  </div>
  <button {{action "updateTicket" model.id}} class="btn btn-primary">Submit</button>
</form>