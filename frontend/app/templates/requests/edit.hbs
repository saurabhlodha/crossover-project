Edit Trip

<form>
  <div class="form-group">
    <label>Destination</label>
    {{input type="text" name="destination" class="form-control" value=model.destination placeholder="Destination" }}
  </div>
  <div class="form-group">
    <label>Start Date</label>
    {{input type="date" name="start_date" class="form-control" value=start_date placeholder="Start Date" }}
  </div>
  <div class="form-group">
    <label>End Date</label>
    {{input type="date" name="end_date" class="form-control" value=end_date placeholder="End Date" }}
  </div>
  <div>
    <label>Comment</label>
    {{input type="text" name="comment" class="form-control" value=model.comment placeholder="Comment" }}
  </div>
  <button {{action "updateTrip" model.id}} class="btn btn-primary">Submit</button>
</form>