<form class="col-sm-8 col-sm-offset-2" {{action 'authenticate' on='submit'}}>
  <div class="form-group">
    <label for="identification">Login</label>
    {{input id='identification' class="form-control" placeholder='Enter Email' value=identification}}
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    {{input id='password' class="form-control" placeholder='Enter Password' type='password' value=password}}
  </div>
  <div class="form-group">
    {{#if errorMessage}}
      <p>{{errorMessage}}</p>
    {{/if}}
  </div>
  <button type="submit" class="btn btn-primary">Login</button>
</form>
